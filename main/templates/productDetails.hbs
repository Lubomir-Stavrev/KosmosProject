<div class="product-container" onload="window.scrollTo(0, document.body.scrollHeight);" class="details-Page">

  <div class="details-Container" onclick="navigateHandler(event)">
    <a href="/imagePreview">
    <img class="detailsImg" src={{image}} alt="">

    </a>

