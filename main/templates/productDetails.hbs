</div>

 {{/if}}


{{#if isAdmin}}
<div >
 <a onclick="navigateHandler(event)" href="/edit/{{productId}}">
 <button class="custom-Button">Edit</button>
 </a>

 <a onclick="requestDelete(event)" href="/delete/{{productId}}">
 <button class="custom-Button">Delete</button>
 </a>

</div>
 {{/if}}
 </div>
</div>


<div id="comment-Container" style="display:{{displayStyle}}">
<div class="custom-Full-Line"></div>
<h1 class="page-Title">Comments</h1>
<div class="custom-Line"></div>
<div class="comment-Form">
  <section onload="scrollToEnd(event)" id="comment-Section">
{{#each comments}}
<p>
{{profile}}:{{comment}}
</p>
{{else}}
<p>There are no comments here</p>
{{/each}}
  </section>
  <div id="comment-Text-Button">

  <textarea  id="comment-Area" cols="70" rows="4">

  </textarea>
  {{#if isLogged}}
  <a onclick="postComment(event)" href="/comment/{{productId}}">
    <button class="custom-Button">Comment</button>
  </a>
  {{else}}
  <a onclick="navigateHandler(event)" href="/login">
    <button class="custom-Button">Comment</button>
  </a>
  {{/if}}
  </div>
  
</div>

</div>
