
{{> header}}
<div class="formContainer">
    <h1 class="formTitle">Редактирай продукт</h1>
    <div class="titleLine"></div>

    <form id="editForm" class="authForm" onsubmit="editForm(event)">

        <div>
            <label for="name"><b>Име на продукт</b></label>
            <br>
            <input type="text" id="nameEdit"
                name="name" value="{{title}}" required>
            <br>
            <label for="brand"><b>Марка</b></label>
            <br>
            <input type="text" id="brandEdit"
                name="brand" value={{brand}} required>
            <br>
            <label for="type"><b>Категория</b></label>
            <br>
            <div>
                <input placeholder="търси категория">
                <button class="authButton" style="font-size: 10pt;"
                    onclick="showCategorieNames(event,'category','true')">Търси</button>
            </div>
            <br>
            <select id="selectCategoryEdit">
                <option value="{{category}}" selected>{{category}}</option>
                {{#each categories}}
                <option value={{name}}>{{name}}</option>
                {{/each}}
            </select>
            <br>
            <label for="type"><b>Подкатегория</b></label>
            <br>
            <div>
                <input placeholder="търси подкатегория">
                <button class="authButton" style="font-size: 10pt;"
                    onclick="showCategorieNames(event,'subcategory','true')">Търси</button>
            </div>
            <br>
            <select id="selectSubcategoryEdit">
                <option value="{{category}}" selected>{{category}}</option>
                {{#each categories}}
                <option value={{name}}>{{name}}</option>
                {{/each}}
            </select>

            <br>
            <label for="price"><b>Цена</b></label>
            <br>
            <input type="double" value="{{price}}" id="priceEdit" name="price">
            <br>
            <label for="quantity"><b>Количество</b></label>
            <br>
            <input type="number" value="{{quantity}}" id="quantityEdit"
                name="quantity">
            <br>
            <label for="description"><b>Описание</b></label>
            <br>
            <input type="text" value="{{description}}" id="descriptionEdit"
                name="description">
            <br>
            <label for="imgUrl"><b>Линк към снимка на продъкта</b></label>
            <br>
            <input type="url" id="imgUrlEdit"
                placeholder="https://примеренАдрес.jpg"
                name="imgUrl" required value="{{image}}">
            <br>
            <br>
        </div>
        <div>
            <button class="authButton" type="submit">Редактирай</button>
        </div>
    </form>

</div>

{{> footer}}