

{{> header}}


<main>
    <div class="wrap">
  

        <div class="search">
            <input type="text" class="searchTerm"
                placeholder="Какво търсите ?">
            <button onclick="searchProducts(event)" type="submit"
                class="searchButton">
                <img src="../../images/waterDrop.png">
            </button>
        </div>
    </div>
    <div id="posts" {{!-- onclick="navigateHandler(event)" --}}>
        {{#each products}}
        {{#if isOffer}}
        <div onclick="navigateHandler(event)" class="post">
            <h1>{{title}}</h1>
            <a href="/details/{{productId}}">

                <a href="/details/{{productId}}">
                    <img class="product-Image"
                        src={{image}}>
                    <div class="middle">
                        <div class="textButton">Купи {{title}} за
                            {{price}}лв</div>
                    </div>
                </a>
                <h1 style="text-decoration:line-through;">{{price}}лв</h1>
                <h1 style="font-size:20px">{{newPrice}}лв</h1>

            </a>
        </div>
        {{/if}}
        {{/each}}
        {{#each products}}
        {{#if isOffer}}
        {{else}}
        <div onclick="navigateHandler(event)" class="post">
            <h1>{{title}}</h1>
            <a href="/details/{{productId}}">

                <a href="/details/{{productId}}">
                    <img class="product-Image"
                        src={{image}}>
                    <div class="middle">
                        <div class="textButton">Купи {{title}} за
                            {{price}}лв</div>
                    </div>
                </a>
                <h1 style="font-size:20px">{{price}}лв</h1>

            </a>
        </div>
        {{/if}}
        {{else}}
        <div class="notFound">
            <img src="../../images/notFound.png">
            <h1>Няма намерени продукти</h1>

        </div>
        {{/each}}

    </main>
    {{> footer}}