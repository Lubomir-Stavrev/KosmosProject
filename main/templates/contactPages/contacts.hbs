{{> header}}
<div id="contactContainer">
    <div id="socialMediaContainer">
        <a target="_blank" href="https://www.facebook.com/kosmosonline">
            <img src="https://img.icons8.com/fluent/48/000000/facebook-new.png"
                />
        </a>
    </div>
    <h1 class="formTitle">Контакти</h1>
    <div class="titleLine"></div>
    <div class="leftContacts">
        <div class="formContainer">
            <h1 class="formTitle">Свържете се с нас</h1>
            <div class="titleLine"></div>

            <form class="authForm" onsubmit="editForm(event)">

                <div>
                    <label for="name"><b>Име и Фамилия</b></label>
                    <br>
                    <input type="name"
                        name="name" required>
                    <br>
                    <label for="email"><b>Имейл</b></label>
                    <br>
                    <input type="email"
                        name="email" required>
                    <br>
                    <label for="comment"><b>Вашето съобщение</b></label>
                    <br>
                    <textarea name="comment" maxlength="100" minlength="10"
                        form="usrform"></textarea>
                    <br>

                    <br>
                </div>
                <div>
                    <button class="authButton" type="submit">Изпрати</button>
                </div>
            </form>

        </div>
    </div>
    <div class="rightContacts">

        <div class="googleMapContainer">
            <h2>София, Обеля, бл. 107 вх. Б - Партер</h2>
